{% extends 'adminbase.html.twig' %}
{% form_theme formProduit 'bootstrap_4_layout.html.twig' %}

{% block title %}Edition du produit!{% endblock %}

{% block body %}
    <div class="container">
    <div class="contenue">


        <div class="mt-4" style="margin-left: 50px;width: 800px;margin-bottom: 50px">
            {{ form_start(formProduit) }}
            <div class="col-sm-4">{{ form_row(formProduit.libelle,{'atr':{'placeholder':"titre du produit"}}) }}</div>
            <div class="col-sm-8">{{ form_row(formProduit.description,{'atr':{'placeholder':"titre du produit"}}) }}</div>
            <div class="col-sm-4">{{ form_row(formProduit.prix,{'atr':{'placeholder':"titre du produit"}}) }}</div>
            <div class="col-sm-4">{{ form_row(formProduit.qstock,{'atr':{'placeholder':"titre du produit"}}) }}</div>
            <div class="col-sm-4">{{ form_row(formProduit.poids,{'atr':{'placeholder':"titre du produit"}}) }}</div>

            {{ form_widget(formProduit) }}
            <button class="btn btn-success" type="submit">enregistre les modification</button>
            {{ form_end(formProduit) }}


        </div>
    </div>
    </div>
{% endblock %}