{% extends 'adminBase.html.twig' %}
{% theme 'bootstrap_4_layout.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}

{% block body %}
    {%  for client in clients %}




        <div class="row">


            <div class="col-lg-12 col-lg-8 lg-6">
                <div class="card h-100">
                    <div class="image"><a href="#"><img src="{{ produit.image }}" alt="" ></a></div>

                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="#">{{ client.nom }}</a>
                        </h4>
                        <h5>${{ client.adress }}</h5>
                        <h5>poid:{{ client.localite }}kg</h5>
                        <h5>dimention:{{ client.cat }}</h5>
                        <p class="card-text">{{ client.compte }}</p>
                        <a href="{{ path("produit",{'id':produit.id}) }}" class="btn btn-primary">voir detail produit</a>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                    </div>
                </div>
            </div>



        </div>

    {% endfor %}
{% endblock %}
